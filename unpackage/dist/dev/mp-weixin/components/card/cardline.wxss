.b-cardline {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  background-color: #FFF;
  border-radius: 24rpx;
}
.b-cardline__img {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}
.b-cardline__img-main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.b-cardline__info {
  flex: 1;
  padding-left: 24rpx;
}
.b-cardline__title {
  width: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
}
.b-cardline__badge {
  display: inline-block;
  vertical-align: 2px;
  padding: 0 4px;
  margin-right: 6rpx;
  border-radius: 14rpx;
  line-height: 28rpx;
  font-size: 16rpx;
}
.b-cardline__price {
  margin-top: 18rpx;
  margin-bottom: 6rpx;
  font-size: 20rpx;
  line-height: 28rpx;
}
.b-cardline__price-main {
  font-size: 34rpx;
  line-height: 48rpx;
}
.b-cardline__originprice {
  padding-left: 16rpx;
  text-decoration: line-through;
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
}
.b-cardline__desc {
  margin-top: 20rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
}

