.order-item {
  position: relative;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #333333;
  padding: 28rpx 28rpx 32rpx 28rpx;
  margin-bottom: 28rpx;
  border-radius: 16rpx;
  font-weight: 500;
}
.order-item .store-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}
.order-item .order-status {
  color: #CA935E;
}
.order-item .content {
  margin-top: 28rpx;
}
.order-item .content .order-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.order-item .content .goods-name {
  height: 80rpx;
  line-height: 40rpx;
  margin-right: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order-item .content .order-msg {
  text-align: right;
}
.order-item .content .order-msg .order-price {
  font-size: 26rpx;
}
.order-item .content .order-msg .order-price text {
  font-size: 36rpx;
}
.order-item .content .order-msg .order-num {
  color: #666;
  font-size: 25rpx;
}
.order-item .content .order-msg .order-num text {
  margin-left: 5rpx;
}
.order-item .content .order-sub {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #666666;
}
.order-item .content .order-sub text {
  font-size: 25rpx;
  margin-left: 12rpx;
}
.order-item .content .operation {
  position: absolute;
  right: 28rpx;
  bottom: 32rpx;
}
.order-item .content .operation .cu-btn {
  font-size: 26rpx;
  height: 60rpx;
  font-weight: 400;
}
.order-item .content .operation .line-mc::after {
  border-color: #999999;
}
.order-item .content .operation .line-mc-primary::after {
  border-color: linear-gradient(323deg, #f14744, #fc8583) 1 1;
}
.order-item .content .wid {
  width: 100%;
}

