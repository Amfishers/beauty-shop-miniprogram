.order-item {
  padding: 32rpx 28rpx;
  background-color: #FFF;
  border-radius: 16rpx;
}
.order-item__storename {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-item__storename-img {
  margin-right: 12rpx;
  width: 32rpx;
  height: 32rpx;
}
.order-item__bd {
  position: relative;
  margin-top: 28rpx;
}
.order-item__img {
  margin-right: 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.order-item__img .image {
  width: 100%;
  height: 100%;
}
.order-item__name {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.order-item__info {
  margin-left: 12rpx;
  width: 108rpx;
  text-align: right;
}
.order-item__info .price {
  font-size: 26rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-item__info .price .text {
  font-size: 36rpx;
}
.order-item__info .num {
  color: #666;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-item__opt {
  position: absolute;
  bottom: 0;
  right: 0;
}
.order-item__opt .btn {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-width: 1px;
  border-style: solid;
  text-align: center;
  line-height: 60rpx;
  background-color: #CA935E;
  color: #FFF;
  font-size: 26rpx;
  border-radius: 36rpx;
}
.order-item__opt .btn.plan {
  background-color: #FFF;
  border-color: #CA935E;
  color: #CA935E;
}

