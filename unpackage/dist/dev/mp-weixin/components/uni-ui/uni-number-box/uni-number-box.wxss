
@charset "UTF-8";
.uni-numbox {
	display: inline-flex;
	flex-direction: row;
	justify-content: flex-start;
	height: 40rpx;
	position: relative
}
.uni-numbox:after {
	content: '';
	position: absolute;
	-webkit-transform-origin: center;
	        transform-origin: center;
	box-sizing: border-box;
	pointer-events: none;
	top: -50%;
	left: -50%;
	right: -50%;
	bottom: -50%;
	-webkit-transform: scale(.5);
	        transform: scale(.5)
}
.uni-numbox__minus,
.uni-numbox__plus {
	margin: 0;
	background-color: transparent;
	width: 40rpx;
	font-size: 36rpx;
	height: 100%;
	line-height: 40rpx;
	text-align: center;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	color: $primary-color;
	position: relative
}
.uni-numbox__value {
	position: relative;
	background-color: #F6F6F6;
	width: 72rpx;
	height: 100%;
	font-size: 24rpx;
	text-align: center;
	padding: 0
}
.uni-numbox--disabled {
	color: silver
}

