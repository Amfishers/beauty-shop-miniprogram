page {
  background-color: #F7F7F7;
}
.search-hd {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 10;
  background-color: #FFF;
  padding: 0 32rpx;
}
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-cancel {
  padding-left: 40rpx;
  line-height: 68rpx;
  font-size: 30rpx;
}
.search-input {
  flex: 1;
  position: relative;
  padding-left: 84rpx;
  background-color: #F7F7F7;
  border-radius: 34rpx;
  height: 68rpx;
}
.search-input .iconfont {
  position: absolute;
  top: 50%;
  left: 28rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #999999;
}
.search-input__input {
  line-height: 68rpx;
  height: 68rpx;
}
.search-filter {
  width: 100%;
  height: 88rpx;
}
.search-filter__main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-filter__sort {
  margin-left: 10rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  width: 12rpx;
  line-height: 16px;
  color: #666;
}
.search-filter__sort b-icon {
  display: inline-block;
  line-height: 6px;
}
.search-filter__item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  text-align: center;
  color: #666;
  font-size: 32rpx;
  line-height: 88rpx;
}
.search-filter__item--popularity {
  display: flex;
  align-items: center;
}
.search-filter__item--active {
  font-weight: 500;
  color: #1D1D1D;
}
.search-filter__item--active::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 40rpx;
  height: 6rpx;
  background-color: #1D1D1D;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border-radius: 6rpx;
}
.search-filter__item-sort {
  color: #666;
}
.search-filter__item-sort--active {
  color: #F5DBC3;
}
.search-bd {
  padding-top: 156rpx;
}
.search-result {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx 24rpx;
}
.search-result__item {
  width: 100%;
  margin: 12rpx 0;
}
.search-more {
  width: 100%;
}

