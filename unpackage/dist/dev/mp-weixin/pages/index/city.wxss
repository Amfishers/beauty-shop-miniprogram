/*line-color*/
.city_block {
  padding: 0 32rpx;
  line-height: 72rpx;
  color: #999999;
  background-color: #F7F7F7;
}
.city_curr {
  padding: 36rpx 32rpx 36rpx 0;
  border-bottom: 1px solid #F2F2F2;
}
.city_curr-city text {
  margin-left: 6rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.city_main {
  margin-left: 32rpx;
}
.city_hot .title {
  padding: 24rpx 0;
  color: #999999;
  line-height: 40rpx;
}
.city_hot-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.city_hot-item {
  margin: 14rpx 48rpx 14rpx 0;
  padding: 0 28rpx;
  line-height: 52rpx;
  border-radius: 26rpx;
  background-color: #F7F7F7;
  color: #1D1D1D;
}
.city_list-title {
  padding: 36rpx 0;
  display: block;
  color: #999999;
  font-size: 28rpx;
  line-height: 40rpx;
}
.city_list-item {
  padding: 28rpx 0;
  color: #1D1D1D;
  line-height: 38rpx;
  border-bottom: 1px solid #F2F2F2;
}

