.search-bar {
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-cancel {
  padding-left: 40rpx;
  line-height: 68rpx;
  font-size: 30rpx;
}
.search-input {
  flex: 1;
  position: relative;
  padding-left: 84rpx;
  background-color: #F7F7F7;
  border-radius: 34rpx;
  height: 68rpx;
}
.search-input .iconfont {
  position: absolute;
  top: 50%;
  left: 28rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #999999;
}
.search-input__input {
  line-height: 68rpx;
  height: 68rpx;
}
.search-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  line-height: 45rpx;
}
.search-title .title {
  font-weight: 500;
}
.search-title .iconfont {
  color: #999;
}
.search-recommend {
  margin-top: 48rpx;
}
.search-item {
  font-size: 0;
  margin-top: 28rpx;
  margin-left: -48rpx;
}
.search-item .item {
  display: inline-block;
  padding: 0 30rpx;
  background-color: #F7F7F7;
  border-radius: 26rpx;
  line-height: 52rpx;
  margin: 14rpx 0 14rpx 48rpx;
  font-size: 26rpx;
}
.search-empty {
  margin-left: 48rpx;
  color: #999999;
  font-size: 24rpx;
  text-align: center;
}
.search-result .tab-nav {
  margin-top: 24rpx;
}
.search-result .tab-nav__main {
  padding: 0 32rpx;
}
.input-placeholder {
  color: #CCCCCC;
  font-size: 24rpx;
}

