/*line-color*/
page {
  background-color: #ffffff;
  overflow-x: hidden;
}
.index {
  background-color: #ffffff;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom) / 2);
}
.zindex2 {
  z-index: 2;
}
.topbg {
  width: 100%;
  height: 420rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.topbar {
  position: relative;
  z-index: -1;
}
.topbar .location-icon {
  width: 44rpx;
  height: 44rpx;
}
.topbar .location-icon.location-msg {
  margin-right: 28rpx;
}
.topbar .location {
  height: 60rpx;
  padding: 0 20rpx 0 14rpx;
  background: white;
  box-shadow: 0rpx 4rpx 10rpx 0rpx rgba(0, 0, 0, 0.3), 0rpx 0rpx 15rpx 0rpx #ffb6b5;
  border-radius: 0rpx 100rpx 100rpx 0rpx;
}
.topbar .location .location-addr {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #f1473d;
}
.dialog-redpacket {
  width: 528rpx;
  background-color: rgba(0, 0, 0, 0);
}
.redpacket {
  width: 528rpx;
  height: 640rpx;
  position: relative;
}
.redpacket.first-step {
  width: 529rpx;
  height: 612rpx;
}
.redpacket .red-pkg-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.redpacket .notice {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 300;
  margin-bottom: 320rpx;
}
.redpacket .receive-msg {
  width: 440rpx;
  height: 133rpx;
  margin-top: 76rpx;
}
.redpacket .receive-msg .receive-money {
  width: 129rpx;
  font-size: 17rpx;
  color: #ffffff;
}
.redpacket .receive-msg .receive-money view:first-child text {
  font-size: 40rpx;
}
.redpacket .receive-msg .receive-money view:last-child {
  width: 94rpx;
  height: 28rpx;
  background: rgba(255, 255, 255, 0.2);
  line-height: 28rpx;
}
.redpacket .receive-msg .receive-notice {
  padding: 22rpx 20rpx;
  font-size: 17rpx;
  color: #999999;
  font-weight: 400;
}
.redpacket .receive-msg .receive-notice view:first-child view {
  width: 65rpx;
  height: 28rpx;
  font-size: 18rpx;
  color: #f14744;
  vertical-align: middle;
}
.redpacket .receive-msg .receive-notice view:first-child text {
  vertical-align: middle;
  font-size: 22rpx;
  color: #1e1e1e;
  font-weight: 500;
  margin-left: 6rpx;
}
.close-modal {
  border: 1rpx solid #ffffff;
  padding: 15rpx;
  border-radius: 50%;
  margin: 32rpx auto 0 auto;
  width: 66rpx;
  height: 66rpx;
  font-size: 36rpx;
  color: #ffffff;
}
.no-padding {
  padding: 0 !important;
}
.home-page__menubar .menubar {
  position: relative;
  z-index: 2;
  padding: 26rpx 32rpx 50rpx;
}

