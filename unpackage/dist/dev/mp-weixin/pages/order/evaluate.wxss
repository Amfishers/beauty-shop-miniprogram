.evaluation {
  background-color: #f2f2f2;
}
.evaluation .visible {
  overflow: visible !important;
}
.goods {
  padding: 40rpx 32rpx;
  font-size: 28rpx;
  font-weight: 400;
  background-color: #FFF;
  border-bottom: 24rpx solid #F7F7F7;
}
.goods image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
}
.goods .num {
  color: #666666;
  margin-left: 28rpx;
}
.form {
  display: block;
}
.evaluate {
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  color: #666666;
}
.evaluate text {
  margin-right: 12rpx;
}
.grid.grid-square .cu-tag {
  padding: 7rpx 8rpx;
  border-radius: 50%;
}
textarea {
  min-height: 260rpx;
  padding: 28rpx 32rpx;
  width: 100%;
}
.solids {
  width: 138rpx;
  height: 138rpx;
  text-align: center;
  color: #999;
}
.solids .icon {
  display: inline-block;
  color: #999;
  margin-top: 30rpx;
}
.solids .text {
  margin-top: 10rpx;
  font-size: 22rpx;
}
.secret {
  padding: 26rpx 32rpx;
  margin-bottom: 72rpx;
}
.secret radio {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
  margin-right: 12rpx;
}
.secret .secret-text {
  display: inline-block;
  font-size: 28rpx;
}
.secret .secret-text text {
  font-size: 22rpx;
  color: #999999;
  margin-left: 20rpx;
}
.btn {
  width: 686rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 400 !important;
  background: #1D1D1D !important;
  color: #F5DBC3;
  font-weight: 500;
  margin: 0 32rpx;
}
.btn.disabled {
  color: rgba(245, 219, 195, 0.5) !important;
}
.close-wrap {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 32rpx;
  height: 32rpx;
}
.close-icon {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  opacity: .5;
}

