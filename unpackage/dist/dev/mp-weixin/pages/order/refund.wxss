/*line-color*/
page {
  background-color: #F7F7F7;
}
.container {
  width: 686rpx;
  min-height: 148rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
  padding: 30rpx 32rpx;
  margin: 28rpx auto;
}
.mb28 {
  margin-bottom: 28rpx;
}
.mb28:last-child {
  margin-bottom: 0;
}
.w1 {
  width: 100%;
}
radio {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.goods {
  padding-bottom: 32rpx;
  margin-bottom: 32rpx;
}
.goods image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
}
.money {
  color: #1D1D1D;
  font-size: 24rpx;
}
.money text {
  font-size: 44rpx;
}
.name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
}
.refund-back {
  color: #666666;
  line-height: 40rpx;
  margin-top: 12rpx;
}
.reason {
  margin-bottom: 32rpx;
  padding-bottom: 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 42rpx;
}
.btn {
  width: 202rpx;
  height: 72rpx;
  font-size: 28rpx;
  color: #1D1D1D;
  border: 1px solid #1D1D1D;
}
.btn-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  padding: 24rpx 48rpx;
  text-align: right;
  background-color: #FFF;
}

