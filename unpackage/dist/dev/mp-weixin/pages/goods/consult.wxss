page {
  background-color: #F7F7F7;
}
.consult {
  padding: 24rpx;
}
.consult_goods {
  margin: 24rpx 24rpx 0 24rpx;
  display: flex;
}
.consult_goods-img {
  width: 80rpx;
  height: 80rpx;
  background-color: #FFF;
  margin-right: 16rpx;
}
.consult_goods-img-main {
  display: block;
  width: 100%;
  height: 100%;
}
.consult_goods-info {
  flex: 1;
  overflow: hidden;
}
.consult_goods-title {
  width: 100%;
  color: #1D1D1D;
  font-size: 28rpx;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.consult_goods-consult {
  margin-top: 16rpx;
  display: block;
  color: #666666;
  font-size: 22rpx;
  line-height: 30rpx;
}
.consult-card {
  padding: 36rpx 28rpx;
  margin-bottom: 24rpx;
  background-color: #FFF;
  border-radius: 16rpx;
}
.consult-card_col {
  padding: 6rpx 0;
}
.consult-card_title {
  color: #1D1D1D;
}
.consult-card_answer {
  margin-top: 20rpx;
}
.consult-card_answer .consult-icon::after {
  color: #FFF;
}
.consult-card_answer .consult-icon .iconfont {
  color: #CA935E;
}
.consult-card_answer .consult-card_title {
  color: #666666;
  font-size: 26rpx;
}
.consult-card_more {
  margin-left: 48rpx;
  margin-top: 40rpx;
  line-height: 24rpx;
}
.consult-card_link {
  color: #CA935E;
  font-size: 24rpx;
}
.consult-card_link-icon {
  margin-left: 6rpx;
}
.consult-card_date {
  color: #999999;
  font-size: 24rpx;
}
.consult-icon {
  position: relative;
  margin-right: 12rpx;
}
.consult-icon::after {
  content: '问';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  line-height: 40rpx;
  font-size: 22rpx;
  text-align: center;
  color: #F5DBC3;
}
.consult-icon .iconfont {
  color: #1D1D1D;
  font-size: 36rpx;
}
.consult-commit {
  width: 100%;
  height: 120rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #FFF;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.consult-commit_input {
  flex: 1;
  height: 68rpx;
  background-color: #F7F7F7;
  line-height: 68rpx;
  border-radius: 34rpx;
  padding: 0 28rpx;
}
.consult-commit_btn {
  margin-left: 20rpx;
  width: 140rpx;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #CA935E;
  color: #FFF;
  border-radius: 34rpx;
  font-size: 28rpx;
}
.consult-list_card-main {
  margin-bottom: 40rpx;
}
.consult-list_card-main:last-child {
  margin-bottom: 0;
}
.consult-list_card-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  margin-right: 16rpx;
}
.consult-list_card-user {
  color: #1D1D1D;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.consult-list_card-date {
  color: #999999;
  font-size: 24rpx;
}
.consult-list_card-bd {
  margin-top: 8rpx;
  margin-left: 96rpx;
  color: #666666;
  font-size: 26rpx;
  line-height: 38rpx;
}

