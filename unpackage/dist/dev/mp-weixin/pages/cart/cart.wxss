/*line-color*/
page {
  background-color: #F7F7F7;
}
.cart-empty {
  padding-top: 300rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.cart-hd {
  padding: 24rpx;
  width: 100%;
  background-color: #F7F7F7;
  z-index: 1024;
}
.cart-hd__main .text {
  color: #666;
  font-size: 28rpx;
  line-height: 44rpx;
}
.cart-hd__main .default-btn {
  height: 44rpx;
  width: 104rpx;
  border: 1px solid #CA935E;
  color: #CA935E;
  line-height: 44rpx;
  font-size: 28rpx;
  border-radius: 22rpx;
  text-align: center;
}
.cart-list {
  margin-bottom: 24rpx;
  border: 16rpx;
}
.cart-list__main {
  padding: 92rpx 24rpx 144rpx;
}
.cart-list__store {
  padding: 0 24rpx;
}
.cart-list__store-name {
  padding-left: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cart-list__item {
  padding: 24rpx;
  background-color: #FFF;
  border-radius: 16rpx;
}
.cart-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 24rpx;
}
.cart-item__img {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}
.cart-item__img-main {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.cart-item__info {
  width: calc(100% - 180rpx);
  padding-left: 20rpx;
  background-color: #FFF;
}
.cart-item__title {
  font-size: 28rpx;
  line-height: 40rpx;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.cart-item__badge {
  display: inline-block;
  vertical-align: 2px;
  padding: 0 4px;
  margin-right: 6rpx;
  border-radius: 14rpx;
  line-height: 28rpx;
  font-size: 16rpx;
}
.cart-item__opt {
  margin-top: 22rpx;
}
.cart-item__price {
  font-size: 20rpx;
  line-height: 28rpx;
}
.cart-item__price-main {
  font-size: 34rpx;
  line-height: 48rpx;
}
.cart-item__originprice {
  padding-left: 16rpx;
  text-decoration: line-through;
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
}
.cart-item__desc {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
}
.cart-delete {
  height: 80rpx;
  width: 192rpx;
  border: 1px solid #1D1D1D;
  border-radius: 40rpx;
  color: #1D1D1D;
  line-height: 80rpx;
  text-align: center;
}
.cart-footer {
  position: fixed;
  padding: 20rpx 24rpx;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  width: 100%;
  background-color: #FFF;
  z-index: 1024;
}
.cart-footer__label {
  font-size: 28rpx;
}
.cart-footer__label .text {
  margin-left: 8rpx;
}
.cart-footer__total {
  margin-left: 32rpx;
  font-size: 32rpx;
}
.cart-footer__submit {
  width: 192rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 40rpx;
}
.cart .checkbox .wx-checkbox-input {
  width: 40rpx !important;
  height: 40rpx !important;
}

