.order-submit {
  padding: 32rpx 32rpx 120rpx 32rpx;
}
.order-submit__detail {
  background-color: #FFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}
.order-submit__address {
  padding: 42rpx 28rpx;
}
.order-submit__address-info {
  font-size: 30rpx;
}
.order-submit__address-img {
  margin-right: 12rpx;
  width: 64rpx;
  height: 64rpx;
}
.order-submit__address-icon .icon {
  display: block;
  color: #666;
}
.order-submit__address-card {
  padding: 0 16rpx;
  flex: 1;
}
.order-submit__address-card .address {
  margin-top: 20rpx;
  font-size: 26rpx;
}
.order-submit__item {
  padding: 24rpx 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.order-submit__item .input {
  text-align: right;
  width: 480rpx;
}
.order-submit__card {
  padding: 24rpx 28rpx;
}
.order-submit__card .card__hd {
  margin-bottom: 24rpx;
}
.order-submit__card .card__hd .title {
  font-size: 28rpx;
  font-weight: 500;
}
.order-submit__card .card__bd {
  font-size: 24rpx;
  color: #666;
}
.order-submit__footer {
  position: fixed;
  padding: 20rpx 32rpx;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  width: 100%;
  background-color: #FFF;
  z-index: 2;
}
.order-submit__footer-total {
  font-size: 32rpx;
}
.order-submit__footer-submit {
  width: 192rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 40rpx;
}
.popup-main {
  background-color: #F7F7F7;
}
.popup-hd {
  padding: 28rpx 32rpx;
  background-color: #FFF;
}
.coupons-popup__bd {
  padding: 0 32rpx;
  min-height: 700rpx;
  max-height: 800rpx;
}
.coupons-popup__bd-main {
  overflow-y: auto;
}
.coupons-popup__item {
  margin-bottom: 40rpx;
  height: 194rpx;
  background-color: #FFF;
  overflow: hidden;
}
.coupons-popup__item:first-child {
  margin-top: 40rpx;
}
.coupons-popup__item:last-child {
  margin-bottom: 40rpx;
}
.coupons-popup__item-type {
  position: relative;
  width: 188rpx;
  background-color: #1D1D1D;
  text-align: center;
}
.coupons-popup__item-type::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  border-left: 20rpx solid #FFF;
  border-bottom: 20rpx solid #FFF;
  border-radius: 100%;
}
.coupons-popup__item-type::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  border-left: 20rpx solid #FFF;
  border-top: 20rpx solid #FFF;
  border-radius: 100%;
}
.coupons-popup__item-type .price {
  margin-top: 32rpx;
  color: #FFF;
  font-size: 28rpx;
}
.coupons-popup__item-type .price .text {
  font-size: 52rpx;
  line-height: 70rpx;
}
.coupons-popup__item-type .condition {
  display: inline-block;
  text-align: center;
  margin: 12rpx 12rpx 0;
  padding: 0 12rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #1D1D1D;
  background: linear-gradient(90deg, #f5dbc3 0%, #ca935e 100%);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupons-popup__item-info {
  flex: 1;
  padding: 28rpx;
}
.coupons-popup__item-info .name {
  height: 90rpx;
  line-height: 45rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.coupons-popup__item-info .date {
  color: #999;
  font-size: 24rpx;
}
.coupons-popup__item-info .btn {
  padding: 0 12rpx;
  display: inline-block;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}
.coupons-popup__item--received .coupons-popup__item-type {
  background: linear-gradient(328deg, #b1bbc4 0%, #d1d8de 100%);
}
.coupons-popup__item--received .coupons-popup__item-type .condition {
  background: #FFF;
}
.coupons-popup__item--received .coupons-popup__item-info .btn {
  color: #FFF;
  background: linear-gradient(328deg, #b1bbc4 0%, #d1d8de 100%);
}
.get-coupons {
  margin: 4rpx 40rpx 4rpx 0;
  position: relative;
  display: inline-block;
  padding: 0 16rpx;
  border-radius: 6rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  overflow: hidden;
}
.get-coupons::after, .get-coupons::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  background-color: #FFF;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.get-coupons::after {
  right: -8rpx;
}
.get-coupons::before {
  left: -8rpx;
}

