.index {
  background-color: #ffffff;
}
.address {
  color: #333333;
  border-top: 1rpx solid #e5e5e5;
}
.address .form-item {
  width: 686rpx;
  height: 120rpx;
  margin: 0 auto;
  padding: 1rpx;
  border-color: #e5e5e5;
  font-size: 30rpx;
}
.address .form-item input {
  text-align: right;
}
.address .form-textarea {
  width: 686rpx;
  height: 200rpx;
  margin: 0 auto;
  border-color: #e5e5e5;
  padding: 1rpx;
  font-size: 30rpx;
}
.address .form-set {
  width: 750rpx;
  height: 120rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  margin-top: 28rpx;
  padding: 1rpx 32rpx;
  font-size: 30rpx;
}
.address .form-set::before {
  content: '';
  width: 100%;
  height: 28rpx;
  display: block;
  background-color: #f2f2f2;
  position: absolute;
  left: 0;
  top: -28rpx;
}
.save {
  width: 686rpx;
  height: 96rpx;
  font-size: 36rpx;
  font-weight: 500;
  margin: 64rpx 32rpx;
  background-color: #1D1D1D !important;
  color: #F5DBC3 !important;
}
input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
  font-size: 30rpx;
  color: #cccccc;
  font-weight: 400;
}
input::placeholder,
textarea::placeholder {
  font-size: 30rpx;
  color: #cccccc;
  font-weight: 400;
}

