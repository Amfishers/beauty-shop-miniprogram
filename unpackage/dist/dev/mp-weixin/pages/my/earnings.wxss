page {
  background: #F7F7F7;
}
.earnings {
  position: relative;
}
.earnings-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 378rpx;
  background-color: #1D1D1D;
  z-index: -1;
}
.earnings-box {
  width: 100%;
  height: 394rpx;
  background: linear-gradient(270deg, #f5dbc3 0%, #ca935e 100%);
  box-shadow: 0px 8px 20px 0px rgba(202, 147, 94, 0.31);
  border-radius: 24px;
  color: #FFF;
}
.earnings-box__main {
  position: relative;
  padding: 32rpx;
}
.earnings-box__main::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFF;
  z-index: -2;
}
.earnings-box__title {
  padding: 32rpx 32rpx 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.earnings-box__item {
  width: 50%;
  text-align: center;
  padding: 16rpx;
}
.earnings-box__item .num {
  padding: 4rpx 0;
  font-size: 48rpx;
  line-height: 58rpx;
}
.earnings-box__item .text {
  font-size: 24rpx;
}
.earnings-list__tab {
  padding: 20rpx 0;
  text-align: center;
  font-size: 0;
  background-color: #FFF;
}
.earnings-list__tab-main {
  display: flex;
  width: 360rpx;
  height: 64rpx;
  margin: 0 auto;
  border: 1px solid #1D1D1D;
  border-radius: 32rpx;
  overflow: hidden;
}
.earnings-list__tab .btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  text-align: center;
}
.earnings-list__tab .btn.active {
  background-color: #1D1D1D;
  color: #F5DBC3;
}
.earnings-list__bar {
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
  background-color: #FFF;
}
.earnings-list__bar-nav {
  position: relative;
  width: 24%;
  display: inline-block;
  padding: 0 20rpx;
  color: #666;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
}
.earnings-list__bar-nav--active {
  font-weight: 500;
  color: #1D1D1D;
}
.earnings-list__bar-nav--active::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 40rpx;
  height: 6rpx;
  background-color: #1D1D1D;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border-radius: 6rpx;
}
.earnings-list__main {
  position: relative;
  padding: 0 32rpx;
}
.earnings-item {
  margin-top: 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  background-color: #FFF;
}
.earnings-item:last-child {
  margin-bottom: 24rpx;
}
.earnings-item__hd .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
}
.earnings-item__hd .info {
  margin-left: 24rpx;
  overflow: hidden;
}
.earnings-item__hd .info-title {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.earnings-item__hd .info-title__img {
  width: 40rpx;
  height: 40rpx;
}
.earnings-item__hd .info-desc {
  margin: 10rpx 0 20rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.earnings-item__hd .info-status .cu-tag {
  line-height: 48rpx;
  color: #CA935E;
  border-radius: 24rpx;
  background-color: rgba(202, 147, 94, 0.15);
}
.earnings-item__data {
  margin-top: 32rpx;
}
.earnings-item__data .data:first-child {
  padding-right: 10rpx;
  width: 40%;
}
.earnings-item__data .data:nth-child(2) {
  padding-right: 10rpx;
  width: 40%;
}
.earnings-item__data .data:last-child {
  width: 20%;
}
.earnings-item__data .data-num {
  padding: 10rpx 0;
  font-size: 32rpx;
}
.earnings-item__data .data-text {
  font-size: 24rpx;
  color: #999;
}
.earnings-item__tip {
  border-top: 1rpx solid #E5E5E5;
  padding-top: 24rpx;
  margin-top: 24rpx;
  color: #999;
}

