.bankcard-item {
  margin-left: 32rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 0.6);
}
.bankcard-item .input,
.bankcard-item .picker {
  height: 125rpx;
  line-height: 125rpx;
}
.bankcard-item .picker-placeholder {
  color: #999;
  font-size: 28rpx;
}
.bankcard-item .picker-active {
  color: #1D1D1D;
  font-size: 28rpx;
}
.bankcard .phonecheck {
  margin: 34rpx 48rpx 30rpx;
  padding: 60rpx 40rpx;
  border: 1rpx solid rgba(30, 30, 30, 0.1);
  border-radius: 24rpx;
}
.bankcard .phonecheck__box {
  margin-top: 40rpx;
  padding: 0 36rpx;
  border: 1rpx solid rgba(30, 30, 30, 0.1);
  border-radius: 24rpx;
}
.bankcard .phonecheck__box .detail {
  display: flex;
  width: 100%;
  padding: 60rpx 0;
}
.bankcard .phonecheck__box .placeholder {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
}
.bankcard .phonecheck__box .input {
  flex: 1;
  margin-left: 40rpx;
}
.bankcard .phonecheck__box-icon {
  width: 40rpx;
  height: 40rpx;
}
.bankcard .phonecheck__box-captcha {
  position: relative;
}
.bankcard .phonecheck__box-captcha::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 1px;
  background: rgba(30, 30, 30, 0.1);
}
.bankcard .phonecheck__box-sentcode {
  color: #1D1D1D;
  font-size: 26rpx;
}
.bankcard .tip {
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
  font-size: 26rpx;
}
.bankcard .placeholder {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
}
.bankcard-btn {
  margin: 25rpx 32rpx;
}
.bankcard-btn .btn {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 400;
}

