page {
  background-color: #F7F7F7;
}
.invite .banner {
  display: block;
  width: 100%;
}
.invite-content {
  padding: 32rpx;
}
.invite .coupons-popup__bd {
  padding: 0 32rpx;
  min-height: 700rpx;
  max-height: 800rpx;
}
.invite .coupons-popup__bd-main {
  overflow-y: auto;
}
.invite .coupons-popup__item {
  margin-bottom: 40rpx;
  height: 194rpx;
  background-color: #FFF;
  overflow: hidden;
}
.invite .coupons-popup__item:first-child {
  margin-top: 40rpx;
}
.invite .coupons-popup__item:last-child {
  margin-bottom: 40rpx;
}
.invite .coupons-popup__item-type {
  position: relative;
  width: 188rpx;
  background-color: #1D1D1D;
  text-align: center;
}
.invite .coupons-popup__item-type::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  border-left: 20rpx solid #FFF;
  border-bottom: 20rpx solid #FFF;
  border-radius: 100%;
}
.invite .coupons-popup__item-type::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  border-left: 20rpx solid #FFF;
  border-top: 20rpx solid #FFF;
  border-radius: 100%;
}
.invite .coupons-popup__item-type .price {
  margin-top: 25rpx;
  color: #FFF;
  font-size: 28rpx;
}
.invite .coupons-popup__item-type .price .text {
  font-size: 72rpx;
  line-height: 60rpx;
}
.invite .coupons-popup__item-type .condition {
  display: inline-block;
  text-align: center;
  margin: 24rpx 12rpx 0;
  padding: 0 12rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #1D1D1D;
  background: linear-gradient(90deg, #f5dbc3 0%, #ca935e 100%);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.invite .coupons-popup__item-info {
  flex: 1;
  padding: 28rpx;
  overflow: hidden;
}
.invite .coupons-popup__item-info .coupon-header {
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.invite .coupons-popup__item-info .coupon-header .cu-tag {
  vertical-align: 2rpx;
  height: 40rpx;
  padding: 0 8rpx;
  margin-right: 8rpx;
}
.invite .coupons-popup__item-info .coupon-header .cu-tag::after {
  border-radius: 50rpx;
}
.invite .coupons-popup__item-info .coupon-header .name {
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: 500;
}
.invite .coupons-popup__item-info .note {
  font-size: 24rpx;
  color: #D41F14;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.invite .coupons-popup__item-info .date {
  color: #999;
  font-size: 24rpx;
}
.invite .coupons-popup__item-info .btn {
  padding: 0 12rpx;
  display: inline-block;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}
.invite .coupons-popup__item--received .coupons-popup__item-type {
  background: linear-gradient(328deg, #b1bbc4 0%, #d1d8de 100%);
}
.invite .coupons-popup__item--received .coupons-popup__item-type .condition {
  background: #FFF;
}
.invite .coupons-popup__item--received .coupons-popup__item-info .btn {
  color: #FFF;
  background: linear-gradient(328deg, #b1bbc4 0%, #d1d8de 100%);
}
.invite .invite-btn {
  width: 620rpx;
  height: 130rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-top: 28rpx;
}
.invite .invite-btn button {
  width: 540rpx;
  height: 77rpx;
  background: rgba(250, 121, 118, 0.06);
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #f14744;
}
.footer-opt {
  position: fixed;
  bottom: 12px;
  left: 0;
  right: 0;
  z-index: 10;
}
.add-btn {
  margin: 0 32rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #F5DBC3;
  background-color: #1D1D1D;
  font-weight: 400;
  border-radius: 54rpx;
}

