.index {
  background-color: #ffffff;
}
.nav-item {
  position: relative;
}
.nav-item.nav-on::after {
  content: '';
  display: inline-block;
  width: 80rpx;
  height: 4rpx;
  background: #f14744;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -40rpx;
}
.cu-list.menu-avatar > .cu-item {
  height: 186rpx;
}
.cu-list.menu-avatar > .cu-item .content {
  left: 176rpx;
  width: calc(100% - 300rpx);
  line-height: 1;
}
.cu-list.menu-avatar > .cu-item .content .title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}
.cu-list.menu-avatar > .cu-item .content .subtitle {
  font-size: 26rpx;
  color: #999999;
  font-weight: 500;
}
.cu-list.menu-avatar > .cu-item .action {
  width: 124rpx;
  font-size: 22rpx;
  color: #999999;
}
.message-icon {
  width: 112rpx;
  height: 112rpx;
  left: 32rpx;
}
.cu-list.menu-avatar > .cu-item::after,
.cu-list.menu > .cu-item::after {
  width: calc(200% - 176rpx) !important;
  left: 176rpx;
}
.msg-list {
  display: flex;
  flex-direction: column;
  padding-bottom: 16rpx;
  background: #ffffff;
}
.msg-list .msg-item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 32rpx;
  border-bottom: 1px #f2f2f2 solid;
}
.msg-list .msg-left {
  padding-right: 32rpx;
}
.msg-list .msg-left image {
  width: 112rpx;
  height: 112rpx;
}
.msg-list .msg-main {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.msg-list .msg-mid {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.msg-list .m-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.msg-list .m-time {
  font-size: 22rpx;
  color: #999999;
}
.msg-list .m-content {
  font-size: 26rpx;
  color: #999999;
}

