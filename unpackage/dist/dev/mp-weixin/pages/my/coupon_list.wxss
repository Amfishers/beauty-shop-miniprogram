page {
  background-color: #F7F7F7;
}
.coupon-list {
  margin: 32rpx 35rpx 32rpx 32rpx;
}
.coupon-list .coupon-item {
  width: 683rpx;
  height: 194rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}
.coupon-list .coupon-item::after, .coupon-list .coupon-item::before {
  content: '';
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  border-radius: 11rpx;
  background: #f2f2f2;
  position: absolute;
  left: 177rpx;
}
.coupon-list .coupon-item::after {
  bottom: -11rpx;
}
.coupon-list .coupon-item::before {
  top: -11rpx;
}
.coupon-list .coupon-item .coupon-money {
  width: 188rpx;
  height: 194rpx;
  font-size: 24rpx;
  color: #ffffff;
  background: linear-gradient(90deg, #404040 0%, #1d1d1d 100%);
}
.coupon-list .coupon-item .coupon-money.expired {
  background: #c4ccd4;
}
.coupon-list .coupon-item .coupon-money.expired .condition {
  color: #FFF;
  background: linear-gradient(328deg, #b1bbc4 0%, #d1d8de 100%);
}
.coupon-list .coupon-item .coupon-money .money {
  margin-bottom: 8rpx;
}
.coupon-list .coupon-item .coupon-money .money text {
  font-size: 44rpx;
}
.coupon-list .coupon-item .coupon-money .condition {
  width: 136rpx;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #1D1D1D;
  background: linear-gradient(90deg, #f5dbc3 0%, #ca935e 100%);
}
.coupon-list .coupon-item .coupon-content {
  padding: 30rpx 24rpx 30rpx 26rpx;
  background: #ffffff;
}
.coupon-list .coupon-item .coupon-content .coupon-header {
  line-height: 45rpx;
}
.coupon-list .coupon-item .coupon-content .coupon-header .cu-tag {
  vertical-align: 2rpx;
  height: 40rpx;
  padding: 0 8rpx;
  margin-right: 8rpx;
}
.coupon-list .coupon-item .coupon-content .coupon-header .cu-tag::after {
  border-radius: 50rpx;
}
.coupon-list .coupon-item .coupon-content .coupon-header .cu-tag.expired {
  color: #999999;
  background-color: #ffffff;
  border: 1rpx solid #dddddd;
}
.coupon-list .coupon-item .coupon-content .coupon-header .title {
  font-size: 32rpx;
  color: #1e1e1e;
  font-weight: 500;
}
.coupon-list .coupon-item .coupon-content .coupon-time {
  font-size: 24rpx;
  color: #999999;
}
.coupon-list .coupon-item .coupon-content .coupon-action {
  width: 138rpx;
}
.coupon-list .coupon-item .coupon-content .coupon-action .expired-img {
  width: 132rpx;
  height: 132rpx;
}
.coupon-list .coupon-item .coupon-content .coupon-action .share {
  height: 48rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  color: #666666;
}
.coupon-list .coupon-item .coupon-content .coupon-action .use {
  height: 48rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  color: #ffffff;
  background: #1D1D1D;
  color: #F5DBC3;
}

