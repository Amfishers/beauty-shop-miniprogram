page {
  background-color: #F7F7F7;
}
.address {
  margin: 28rpx 32rpx 124rpx 32rpx;
}
.address .address-list {
  width: 686rpx;
  min-height: 288rpx;
  font-size: 32rpx;
  color: #333333;
  background-color: #ffffff;
  padding: 28rpx;
  font-weight: 500;
  line-height: 37rpx;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
}
.address .address-list .location {
  font-size: 26rpx;
  font-weight: 400;
  padding-bottom: 24rpx;
  margin: 24rpx 0;
}
.address .address-list .operation-radio radio .wx-radio-input {
  width: 40rpx !important;
  height: 40rpx !important;
}
.address .address-list .operation-radio text {
  font-size: 24rpx;
  color: #666666;
  margin-left: 12rpx;
}
.address .address-list .operations {
  margin-left: 64rpx;
}
.address .address-list .operations image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.address .address-list .operations text {
  font-size: 24rpx;
  color: #666666;
}
.address .address-list .operations .iconfont {
  display: inline-block;
  margin-right: 12rpx;
}
.footer-opt {
  position: fixed;
  bottom: 12px;
  left: 0;
  right: 0;
  z-index: 10;
}
.add-btn {
  margin: 0 32rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #F5DBC3;
  background-color: #1D1D1D;
  font-weight: 400;
  border-radius: 54rpx;
}

