.wrap-sku .product-box {
  width: 1200px;
  display: block;
  margin: 0 auto;
}
.wrap-sku .product-content {
  margin-bottom: 100px;
}
.wrap-sku .product-delcom {
  color: #323232;
  font-size: 26px;
  border-bottom: 1px solid #EEEEEE;
  padding: 30px 0;
}
.wrap-sku .product-footerlist {
  margin-top: 10px;
}
.wrap-sku .product-footerlist ._li {
  border: 1px solid #606060;
  border-radius: 5px;
  color: #606060;
  text-align: center;
  padding: 10px 30px;
  float: left;
  margin-right: 20px;
  cursor: pointer;
}
.wrap-sku .product-footerlist ._li.productActive {
  background-color: #1A1A29;
  color: #fff;
  border: 1px solid #1A1A29;
}
.wrap-sku .product-footerlist ._li.noneActive {
  background-color: #ccc;
  opacity: 0.4;
  color: #000;
  pointer-events: none;
}
.wrap-sku .product-footer {
  background-color: #1A1A29;
  text-align: center;
}
.wrap-sku .product-footer ._a {
  color: #fff;
  text-decoration: none;
  height: 88px;
  line-height: 88px;
  font-size: 28px;
}
.wrap-sku .price {
  font-size: 30px;
  height: 60px;
  line-height: 60px;
}

